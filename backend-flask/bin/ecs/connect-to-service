#! /usr/bin/bash
if [ -z "$1" ]; then
  echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-service f049e0871d7a4c0fbe1d4feeb6718781 backend-flask"
  exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
  echo "No CONTAINER_NAME argument supplied eg ./bin/ecs/connect-to-service f049e0871d7a4c0fbe1d4feeb6718781 backend-flask"
  exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION  \
--cluster cruddur  \
--task $TASK_ID  \
--container $CONTAINER_NAME  \
--command "/bin/bash"  \
--interactive